extends layout

block content
  h1= title
  - const river = ['river_type','size','age']
  - let results;
  script.
    function buy(x){
      alert('Purchased Item: ' + x)
   } 
  div(class='container-fluid')
    div(class='row')
      each results, index in river
        div(class='col-sm-2' onclick='buy('+index+')') #{results}